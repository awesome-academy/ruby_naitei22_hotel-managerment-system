<div class="search-section">
  <%= search_form_for @q, url: admin_rooms_path, method: :get, local: true do |f| %>
    <div class="search-form">
      <div class="search-field">
        <%= f.label :room_number_cont, t(".room_number"), class: "form-label" %>
        <%= f.search_field :room_number_cont, class: "form-control", placeholder: t(".room_number_placeholder") %>
      </div>

      <div class="search-field">
        <%= f.label :room_type_name_cont, t(".room_type_name"), class: "form-label" %>
        <%= f.select :room_type_name_eq,
             options_for_select(room_type_options, params.dig(:q, :room_type_name_eq)),
             { include_blank: t(".room_type_name") },
             class: "form-select" %>
      </div>

      <div class="search-actions">
        <%= f.submit t(".search_button"), class: "btn btn-primary" %>
        <%= link_to t(".reset_button"), admin_rooms_path, class: "btn btn-secondary" %>
      </div>
    </div>
  <% end %>
</div>
