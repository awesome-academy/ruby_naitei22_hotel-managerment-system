<div class="search-section">
  <%= search_form_for @q, url: admin_users_path, method: :get, local: true do |f| %>
    <div class="search-form">
      <div class="search-field">
        <%= f.label :name_cont, t(".name"), class: "form-label" %>
        <%= f.search_field :name_cont, class: "form-control", placeholder: t(".name_placeholder") %>
      </div>
      <div class="search-field">
        <%= f.label :email_cont, t(".email"), class: "form-label" %>
        <%= f.search_field :email_cont, class: "form-control", placeholder: t(".email_placeholder") %>
      </div>
      <div class="search-field">
        <%= f.label :phone_cont, t(".phone"), class: "form-label" %>
        <%= f.search_field :phone_cont, class: "form-control", placeholder: t(".phone_placeholder") %>
      </div>
      <div class="search-field">
        <%= f.label :activated_eq, t(".status"), class: "form-label" %>
        <%= f.select :activated_eq, options_for_select(user_status_filter_options, params.dig(:q, :activated_eq)), {}, {class: "form-select"} %>
      </div>
      <div class="search-actions">
        <%= f.submit t(".search_button"), class: "btn btn-primary" %>
        <%= link_to t(".reset_button"), admin_users_path, class: "btn btn-secondary" %>
      </div>
    </div>
  <% end %>
</div>
