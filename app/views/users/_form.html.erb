<%= render "shared/error_messages", object: @user %>

<div class="form-group">
  <%= f.label :email, t("signup.email") %>
  <%= f.email_field :email, class: "form-control", placeholder: t(".placeholders.email") %>
</div>

<div class="form-group">
  <%= f.label :name, t("signup.name") %>
  <%= f.text_field :name, class: "form-control", placeholder: t(".placeholders.name") %>
</div>

<div class="form-group">
  <%= f.label :phone, t("signup.phone") %>
  <%= f.telephone_field :phone, class: "form-control", placeholder: t(".placeholders.phone") %>
</div>

<div class="form-group">
  <%= f.label :password, t("signup.password") %>
  <div class="password-field">
    <%= f.password_field :password, class: "form-control", placeholder: t(".placeholders.password") %>
    <i class="toggle-password fa fa-eye"></i>
  </div>
</div>

<div class="form-group">
  <%= f.label :password_confirmation, t("signup.password_confirmation") %>
  <div class="password-field">
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: t(".placeholders.password_confirmation") %>
    <i class="toggle-password fa fa-eye"></i>
  </div>
</div>
