<!DOCTYPE html>
<html>

<head>
  <title>
    <%= full_title yield :title %>
  </title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>

  <%= javascript_include_tag "application", "data-turbo-track": "reload" %>

  <%= javascript_importmap_tags %>

  <!-- Disable dates -->
  <%= javascript_include_tag "https://cdn.jsdelivr.net/npm/flatpickr" %>
  <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" %>

  <!-- Room images -->
  <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" %>
  <%= javascript_include_tag "https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js", defer: true %>

</head>

<body>
  <%= render "layouts/header", new_locale: (I18n.locale == :en ? :vi : :en) %>

  <div class="container">
    <% if flash.present? %>
      <div class="bootstrap-scope">
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>">
            <%= message %>
          </div>
        <% end %>
      </div>
    <% end %>

    <%= yield %>
  </div>
</body>

</html>
