<% content_for :sidebar_title do %>
  <%= t("users.sidebar.change_password") %>
<% end %>

<div class="account-container">
  <%= render "shared/account_sidebar" %>

  <div class="account-content">
    <%= form_for @user, 
             url: user_change_password_path(@user), 
             method: :patch, 
             html: { class: "change-password-form", autocomplete: "off" } do |f| %>

      <div class="form-group">
        <label><%= t("users.form.current_password") %></label>
        <div class="input-wrapper">
          <i class="fa fa-lock"></i>
          <%= f.password_field :current_password, placeholder: t("users.form.placeholders.current_password"), class: "input-field", autocomplete: "off" %>
          <i class="fa fa-eye toggle-password"></i>
        </div>
      </div>

      <div class="form-group">
        <label><%= t("users.form.new_password") %></label>
        <div class="input-wrapper">
          <i class="fa fa-lock"></i>
          <%= f.password_field :password, placeholder: t("users.form.placeholders.new_password"), class: "input-field", autocomplete: "off" %>
          <i class="fa fa-eye toggle-password"></i>
        </div>
      </div>

      <div class="form-group">
        <label><%= t("users.form.password_confirmation") %></label>
        <div class="input-wrapper">
          <i class="fa fa-lock"></i>
          <%= f.password_field :password_confirmation, placeholder: t("users.form.placeholders.new_password_confirmation"), class: "input-field", autocomplete: "off" %>
          <i class="fa fa-eye toggle-password"></i>
        </div>
      </div>

      <%= f.submit t("users.form.save_changes"), class: "submit-btn" %>
    <% end %>
  </div>
</div>
