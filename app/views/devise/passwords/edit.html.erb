<% provide :title, t(".title") %>

<div class="form-reset">
  <div class="container">
    <h1><%= t(".title") %></h1>

    <div class="form">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "shared/error_messages", resource: resource, object: f.object %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.label :password, t(".new_password") %>
          <div class="input-wrapper">
            <i class="fa fa-lock icon"></i>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: t(".password_placeholder") %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, t(".confirm_password") %>
          <div class="input-wrapper">
            <i class="fa fa-lock icon"></i>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: t(".confirm_placeholder") %>
          </div>
        </div>

        <div class="form-group form-action">
          <%= f.submit t(".update_btn"), class: "btn btn-submit" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
